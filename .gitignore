*.log
*.bak
*.swp
/sitemap.xml
/.htaccess
/.user.ini
/wp-content/debug.log

# Exclude node modules or other dependency directories
/node_modules/
/vendor/

# Exclude any specific backup or temp files
*.sql
*.tar.gz
*.zip
