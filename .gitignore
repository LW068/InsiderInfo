/wp-admin/
/wp-includes/
/xmlrpc.php
/wp-*.php
/index.php
/license.txt
/readme.html

# wp-config files
wp-config*.php

# Exclude specific WordPress content directories, but include your child theme
/wp-content/plugins/
/wp-content/uploads/
/wp-content/upgrade/
/wp-content/index.php
/wp-content/languages/

# Include your child theme - adjust the directory name to your child theme's name
!/wp-content/themes/twentytwentyfour-child/

